<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aplimoviles.com.popshow"
    android:targetSandboxVersion="1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="aplimoviles.com.popshow.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="aplimoviles.com.popshow.Principal"
            android:label="@string/PopShow"
            android:screenOrientation="portrait" />
        <activity
            android:name="aplimoviles.com.popshow.Caldas"
            android:label="@string/title_activity_caldas"
            android:screenOrientation="portrait" />
        <activity
            android:name="aplimoviles.com.popshow.MuseoHN"
            android:label="@string/title_activity_MuseoHn"
            android:screenOrientation="portrait" />
        <activity
            android:name="aplimoviles.com.popshow.Ermita"
            android:label="@string/title_activity_ermita"
            android:screenOrientation="portrait" />
        <activity
            android:name="aplimoviles.com.popshow.Morro"
            android:label="@string/title_activity_morro"
            android:screenOrientation="portrait" />
        <activity
            android:name="aplimoviles.com.popshow.Campanario"
            android:label="@string/title_activity_campanario"
            android:screenOrientation="portrait" />
        <activity
            android:name="aplimoviles.com.popshow.Pueblito"
            android:label="@string/title_activity_pueblitop"
            android:screenOrientation="portrait" />
        <activity
            android:name="aplimoviles.com.popshow.favoritos"
            android:label="@string/title_activity_favoritos"
            android:screenOrientation="portrait" />
    </application>

</manifest>